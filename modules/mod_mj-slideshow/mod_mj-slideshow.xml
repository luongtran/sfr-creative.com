<?xml version="1.0" encoding="utf-8"?>

<extension type="module" version="3.0.0" method="upgrade">
<version>1.0.0</version>
<name>Mj-Slideshow</name>

<createdOn>July 2012</createdOn>
<author>Das Infomedia Team</author>
<authorUrl>www.mojoomla.com</authorUrl>
<authorEmail>sales@mojoomla.com</authorEmail>


<description>Mj-Slideshow: A slideshow which uses the Transform, Fade and Kenburns effect to display both Image Title, Description on left and Image itself on the Right.
</description>

<files>
	<filename module="mod_mj-slideshow">mod_mj-slideshow.php</filename>
	<filename>index.html</filename>
	<folder>css</folder>
	<folder>images</folder>
	<folder>js</folder>
	<filename>mod_mj-slideshow.xml</filename>
	<folder>tmpl</folder>
</files>

<config>
	<fields name="params">
		<fieldset name="SliderOptions" label="Slider Options">
			
			<field name="slideWidth" type="text" size="7" default="1140px" label="Slider Width (pixel)" 
										description="default = 1140, please add 'px' in the end. Set it according to the width of your Template" />
										
			<field name="slideHeight" type="text" size="7" default="380px" label="Slider Height (pixel)" 
										description="default = 380, please add 'px' in the end." />
			
			<field type="spacer" name="@spacer12" hr="true"/>
										
			<!--Text Width -->
			<field name="textWidth" type="text" size="7" default="40%" label="Text Area Width (in percentage)" 
										description="default = 40%, please add '%' in the end." />
										
			<field name="textPosition" type="list" default="left" label="Text Area Postion" 
										description="default is Left.">
										<option value="right">Right</option>
										<option value="left">Left</option>
			</field>
			
			<field name="textAlign" type="list" default="left" label="Text Alignment" 
										description="default is Left.">
										<option value="right">Right</option>
										<option value="left">Left</option>
										<option value="center">Center</option>
			</field>
			
			<field type="spacer" name="@spacer11" hr="true"/>
			
		
			<!--Image Width -->
			<field name="imageWidth" type="text" size="7" default="60%" label="Image Width (in percentage)" 
										description="default = 60%, please add '%' in the end." />
			<field type="spacer" name="@spacer10" hr="true"/>
		
		
			<!--Slider Effect-->
			<field name="sliderEffect" type="list" default="transform" label="Slider Effect" 
										description="Changes the Transition effect of Slideshow. Default is Transform Effect">
										
										<option value="transform">Transform</option>
										<option value="kenburns"> Kenburns</option>
										<option value="fade">Fade</option>
			</field>
			<field type="spacer" name="@spacer13" hr="true"/>
			
		</fieldset>
		
		<fieldset name="ImageOptions" label="Image Options">
			
			
			<!--SlideShow 1-->
			<field type="spacer" name="Image-1" label="Image1" />
			
			<field type="spacer" name="@spacer00" hr="true"/>
			
			<field name="image1" type="input" size="70" default="slide-1.png" label="Image Name" 
										description="Name of the image | Change the name of Image as per your wish." />
			
			<field name="title1" type="text" size="70" default="Responsive Joomla Template" label="Title" description="Enter the title for Image 1" filter="raw" />
			
			<field name="desc1" type="textarea" rows="5" cols="30" default="This template works on Mobile, tablets and desktops" label="Description" 
										description="Enter the Description for Image 1" filter="raw"/>
			
			<field type="spacer" name="@spacer01" hr="true"/>
			
			
			<!--SlideShow 2-->
			<field type="spacer" name="Image-2" label="Image2" />
			
			<field type="spacer" name="@spacer02" hr="true"/>
			
			<field name="image2" type="input" size="70" default="" label="Image Name" 
												description="Name of the image | Change name of the Image as per your wish." />
			
			<field name="title2" type="text" size="70" default="" label="Title" description="Enter the title for Image 2" filter="raw"/>
			
			<field name="desc2" type="textarea" rows="5" cols="30" default="" label="Description" 							description="Enter the Description for Image 2" filter="raw"/>
			
			<field type="spacer" name="@spacer03" hr="true"/>
			
			<!--SlideShow 3-->
			<field type="spacer" name="Image-3" label="Image3" />
			
			<field type="spacer" name="@spacer04" hr="true"/>
			
			<field name="image3" type="input" size="70" default="" label="Image Name" 
												description="Name of the image | Change name of the Image as per your wish." />
			
			<field name="title3" type="text" size="70" default="" label="Title" description="Enter the title for Image 3" filter="raw"/>
			
			<field name="desc3" type="textarea" rows="5" cols="30" default="" label="Description" 
												description="Enter the Description for Image 3" filter="raw"/>
			
			<field type="spacer" name="@spacer05" hr="true"/>
			
			
			<!--SlideShow 4-->
			
			<field type="spacer" name="Image-4" label="Image4" />
			
			<field type="spacer" name="@spacer06" hr="true"/>
			
			<field name="image4" type="input" size="70" default="" label="Image Name" 
														description="Name of the image | Change name of the Image as per your wish." />
			
			<field name="title4" type="text" size="70" default="" label="Title" description="" filter="raw" />
			
			<field name="desc4" type="textarea" rows="5" cols="30" default="" label="Description" 
														description="" filter="raw"/>
			
			<!--SlideShow 5-->
			
			<field type="spacer" name="Image-5" label="Image5" />
			
			<field type="spacer" name="@spacer07" hr="true"/>
			
			<field name="image5" type="input" size="70" default="" label="Image Name" 
														description="Name of the image | Change name of the Image as per your wish." />
			
			<field name="title5" type="text" size="70" default="" label="Title" description="" filter="raw"/>
			
			<field name="desc5" type="textarea" rows="5" cols="30" default="" label="Description" 
														description="" filter="raw"/>
			
			<field type="spacer" name="@spacer08" hr="true"/>
			
			
		</fieldset>
	</fields>
</config>
</extension>